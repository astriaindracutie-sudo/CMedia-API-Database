{
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "predev": "fuser -k 3000/tcp 2>/dev/null || true && fuser -k 5173/tcp 2>/dev/null || true",
    "install:all": "yarn install",
    "start:backend": "yarn workspace backend start",
    "start:frontend": "yarn workspace cmedia-frontend dev",
    "dev": "concurrently \"yarn workspace backend start\" \"yarn workspace cmedia-frontend dev\"",
    "lint": "yarn workspaces run lint",
    "lint:all": "yarn workspaces run lint",
    "lint:backend": "yarn workspace backend lint",
    "lint:frontend": "yarn workspace cmedia-frontend lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "lint:fix:backend": "yarn workspace backend lint:fix",
    "lint:fix:frontend": "yarn workspace cmedia-frontend lint:fix",
    "test": "yarn workspaces run test",
    "test:all": "yarn workspaces run test",
    "test:backend": "yarn workspace backend test",
    "test:frontend": "yarn workspace cmedia-frontend test",
    "test:backend-db": "yarn workspace backend test-db",
    "seed:backend-db": "yarn workspace backend seed-db",
    "clean:all": "rm -rf node_modules yarn.lock && yarn workspaces foreach --all --no-private --exec \"rm -rf node_modules package-lock.json yarn.lock\"",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "build": "yarn workspaces run build",
    "build:backend": "yarn workspace backend build",
    "build:frontend": "yarn workspace cmedia-frontend build",
    "start:prod:backend": "yarn workspace backend start:prod"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "prettier": "^3.2.5"
  }
}
